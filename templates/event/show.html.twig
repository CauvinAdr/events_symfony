{% extends 'base.html.twig' %}

{% block title %}Hello Event{% endblock %}

{% block body %}
    <h1>{{ event.name }}</h1>

    <hr>

    <div class="row">
        <div class="col-6">
            <img src="{{ event.image }}" alt="Une image lorem picsum alÃ©atoire">
        </div>
        <div class="col-6">
            <p>{{ event.description }}</p>
        </div>
    </div>

    <div class="row">
        <h2>Evaluations</h2>
        {% for evaluation in evaluations %}
            <div class="col-3 mx-auto">
                {{ evaluation.comment }}
                Note : {{ evaluation.rate }}
            </div>
        {% endfor %}
        <p></p>
    </div>
{% endblock %}