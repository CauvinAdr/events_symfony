<div class="col-3 mx-auto">
    <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
        <div class="card-header row">
            <div class="col-6">
                <p>{{ event.name }}</p>
            </div>
            <div class="col-6">
                {% if profil is not defined %}
                    <a href="{{ path('event_participation', {'event': event.id}) }}" class="badge bg-secondary">Participation</a>
                {% else %}
                    <a href="{{ path('event_evaluate', {'event': event.id}) }}" class="badge bg-secondary">Evaluer</a>
                {% endif %}
            </div>
        </div>
        <div class="card-body">
            <img class="card-img" src="{{ event.image }}" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
            <h5 class="card-title">{{ event.startedAt|date('d/m/Y') }}</h5>
            <p class="card-text">{{ event.description }}</p>
            <rect width="100%" height="100%" fill="#868e96"></rect>
            <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Nombre de place : {{ event.placeNumber }}</text>
            <div class="row justify-content-center">
                <div class="col-4">
                    <a href="{{ path('event_show', {'event': event.id}) }}" class="badge bg-success">Details</a>
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="col-4">
                        <a class="badge rounded-pill bg-danger" href="/events/{{ event.id }}/delete">Delete</a>
                    </div>
                {% endif %}
                {% if is_granted('ROLE_CONTRIBUTOR') %}
                    <div class="col-4">
                        <a class="badge rounded-pill bg-info" href="/events/{{ event.id }}/update">Update</a>
                    </div>
                {% endif %}
            </div>

            </img>
        </div>
    </div>
</div>